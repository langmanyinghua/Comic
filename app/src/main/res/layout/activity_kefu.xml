<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:background="@color/mkz_gray1"
    android:focusableInTouchMode="true">

    <include layout="@layout/design_navigation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_tarbar_rl"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="@string/feeback_content"
            android:textColor="@color/mkz_gray8"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/custome_pay_item_choose"
            android:hint="手机号码"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/mkz_gray4"
            android:textColorHint="@color/mkz_gray4"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/content_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custome_pay_item_choose"
            android:gravity="left|top"
            android:hint="请在此输入反馈内容"
            android:lines="8"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/mkz_gray4"
            android:textColorHint="@color/mkz_gray4"
            android:textSize="14sp" />

        <Button
            android:id="@+id/commit_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/pay_ll"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custome_button"
            android:text="提交"
            android:onClick="onClickSubmit"
            android:textColor="@color/button"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
