<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/bookbox_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="center"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/mkz_red"
        app:tabTextColor="@color/mkz_black1"
        app:tabIndicatorColor="@color/mkz_red" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/mkz_gray5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/bookbox_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>