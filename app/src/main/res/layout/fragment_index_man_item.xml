<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="12.0dip">

    <ImageView
        android:id="@+id/image"
        android:layout_width="75.0dip"
        android:layout_height="100.0dip"
        android:scaleType="centerCrop" />
    <!--
        <ImageView
            android:id="@+id/image"
            android:layout_width="75.0dip"
            android:layout_height="100.0dip"
            android:scaleType="fitXY" />
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/read_layout"
        android:layout_toRightOf="@+id/image"
        android:orientation="vertical"
        android:paddingLeft="12.0dip">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/mkz_black1"
            android:textSize="15.0sp" />

        <LinearLayout
            android:id="@+id/label_layout"
            android:layout_width="fill_parent"
            android:layout_height="16.0dip"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/mkz_black2"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:singleLine="true"
            android:textColor="@color/mkz_black3"
            android:textSize="10.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/read_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="10.0dip"
        android:drawableTop="@drawable/mkz_ic_read"
        android:text="@string/mkz_fast_look"
        android:textColor="@color/mkz_black2"
        android:textSize="12.0sp" />

</RelativeLayout>