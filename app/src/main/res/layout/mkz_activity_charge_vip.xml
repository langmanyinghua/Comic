<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mkz_gray1"
    android:orientation="vertical">

    <include layout="@layout/design_navigation" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6.0dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginTop="12.0dip"
                    android:text="@string/mkz_discount"
                    android:textColor="@color/mkz_black3"
                    android:textSize="14.0sp" />
            </FrameLayout>

            <ListView
                android:id="@+id/vip_price_list"
                android:layout_width="fill_parent"
                android:layout_height="200.0dip"
                android:divider="@null"
                android:dividerHeight="0.0dip"
                android:listSelector="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="12.0dip"
                android:text="@string/mkz_pay_method"
                android:textColor="@color/mkz_black3"
                android:textSize="14.0sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pay_method_recycler"
                android:layout_width="fill_parent"
                android:layout_height="140.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="6.0dip" />

            <TextView
                android:id="@+id/btn_pay"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_marginLeft="22.0dip"
                android:layout_marginRight="22.0dip"
                android:layout_marginTop="12.0dip"
                android:background="@drawable/mkz_bg_btn_pay_disable"
                android:gravity="center"
                android:text="@string/mkz_pay_confirm"
                android:textColor="@color/mkz_white"
                android:textSize="18.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="6.0dip"
                android:layout_marginTop="24.0dip"
                android:background="@color/mkz_gray5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="12.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mkz_vip_privilege"
                    android:textColor="@color/mkz_black1"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:text="@string/mkz_vip_privilege1"
                    android:textColor="@color/mkz_red"
                    android:textSize="13.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:text="@string/mkz_vip_privilege2"
                    android:textColor="@color/mkz_red"
                    android:textSize="13.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:text="@string/mkz_vip_privilege3"
                    android:textColor="@color/mkz_red"
                    android:textSize="13.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:text="@string/mkz_vip_privilege_more"
                    android:textColor="@color/mkz_gray4"
                    android:textSize="13.0sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
